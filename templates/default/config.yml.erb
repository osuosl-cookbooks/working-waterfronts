### Settings for the What's Fresh API ###

# SECURITY WARNING: keep the secret key used in production secret!
SECRET_KEY: "<%= @secret_key %>"

##### Database Configuration #####
DATABASES:
    default:
        ENGINE: "django.contrib.gis.db.backends.postgis"
        NAME: "<%= @db_name %>"
        USER: "<%= @username %>"
        PASSWORD: "<%= @password %>"
        HOST: "<%= @host %>"
        PORT: <%= @port %>


##### Internationalization Settings #####
LANGUAGE_CODE: "en-us"

TIME_ZONE: "UTC"
USE_I18N: True
USE_L10N: True
USE_TZ: True


##### Static and media files #####
STATIC_ROOT: "<%= node['working_waterfronts']['application_dir'] %>/static"
STATIC_URL: "/static/"

MEDIA_ROOT: "<%= node['working_waterfronts']['application_dir'] %>/media"
MEDIA_URL: "/media/"


##### Set debug on/off #####
DEBUG: <%= node['working_waterfronts']['debug'] %>

# Proximity used for location queries if
# proximity parameter is not also passed
DEFAULT_PROXIMITY: 20